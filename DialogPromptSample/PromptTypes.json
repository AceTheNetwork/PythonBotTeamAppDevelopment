{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "size": "Medium",
              "url": "https://avatars1.githubusercontent.com/u/42580044?s=200&v=4"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Bot Builder Community Dialogs Prompts",
              "wrap": true,
              "size": "Medium"
            },
            {
              "type": "TextBlock",
              "spacing": "None",
              "isSubtle": true,
              "wrap": true,
              "text": "UnitType | NumberType | Email | PhoneNumber | Guid | Social | IP Protocol"
            }
          ],
          "width": "stretch",
          "horizontalAlignment": "Center",
          "verticalContentAlignment": "Center",
          "style": "default"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "Input.ChoiceSet",
          "choices": [
            {
              "title": "Currency",
              "value": "Currency"
            },
            {
              "title": "Temperature",
              "value": "Temperature"
            }
          ],
          "placeholder": "Select Prompt Type",
          "id": "selectedType"
        }
      ]
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Submit"
        }
      ]
    }
  ]
}